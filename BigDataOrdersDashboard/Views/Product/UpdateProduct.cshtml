@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>Ürün Güncelleme</h2>
                    </div>
                    <div class="body">
                        <form method="post">

                            <input type="hidden" asp-for="ProductId" />

                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />

                            <label>Ürün Açıklaması</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                            <br />

                            <label>Kategori Seçimi</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
                            <br />

                            <label>Birim Fiyat</label>
                            <input type="number" step="0.01" asp-for="UnitPrice" class="form-control" />
                            <br />

                            <label>Stok Adedi</label>
                            <input type="number" asp-for="StockQuantity" class="form-control" />
                            <br />

                            <label>Menşei (Ülke)</label>
                            <input type="text" asp-for="CountryOfOrigin" class="form-control" />
                            <br />

                            <label>Resim URL</label>
                            <input type="text" asp-for="ProductImageUrl" class="form-control" />
                            <br />

                            <button class="btn btn-info">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

