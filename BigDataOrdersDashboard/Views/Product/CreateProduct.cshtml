@model Product
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2>Yeni Ürün Ekle</h2>
                    </div>
                    <div class="body">
                        <form method="post">

                            <label>Ürün Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" placeholder="Ürün adını giriniz..." />
                            <br />

                            <label>Ürün Açıklaması</label>
                            <textarea asp-for="ProductDescription" class="form-control" rows="3" placeholder="Açıklama giriniz..."></textarea>
                            <br />

                            <label>Kategori Seçimi</label>
                            <div class="form-line">
                                <select asp-for="CategoryId" asp-items="ViewBag.categories" class="form-control show-tick">
                                    <option value="">-- Kategori Seçin --</option>
                                </select>
                            </div>

                            <label>Birim Fiyat</label>
                            <input type="text" asp-for="UnitPrice" class="form-control" />
                            <br />

                            <label>Stok Adedi</label>
                            <input type="number" asp-for="StockQuantity" class="form-control" />
                            <br />

                            <label>Menşei (Ülke)</label>
                            <input type="text" asp-for="CountryOfOrigin" class="form-control" />
                            <br />

                            <label>Resim URL</label>
                            <input type="text" asp-for="ProductImageUrl" class="form-control" />
                            <br />

                            <button class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

