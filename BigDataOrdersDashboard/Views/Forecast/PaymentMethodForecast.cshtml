@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "PaymentMethodForecast";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content">

    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    2026 Yılı İlk Çeyrek Ödeme Yöntemleri Tahminleri
                    <small class="text-muted">2025 Yılı Verilerine Göre Tahminlenmiştir</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Tahminlemeler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Sipariş Tahminlemeleri</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">

                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Ödeme Yöntemi</th>
                                    <th>Ay</th>
                                    <th>Tahmini Sipariş Sayısı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th>@item.PaymentMethod</th>
                                        <th>@item.Month</th>
                                        <th>@item.ForecastedCount</th>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



