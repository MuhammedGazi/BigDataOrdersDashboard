
@*
    _DashboardSubStatisticsComponentPartial
*@
<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <ul class="row profile_state list-unstyled">
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-camera col-amber"></i>
                        <h4>@ViewBag.CategoryCount</h4>
                        <span>Kategori Sayısı</span>
                    </div>
                </li>
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-thumb-up col-blue"></i>
                        <h4>@ViewBag.ProductCount</h4>
                        <span>Ürün Sayısı</span>
                    </div>
                </li>
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-comment-text col-red"></i>
                        <h4>@ViewBag.CustomerCount</h4>
                        <span>Müşteri Sayısı</span>
                    </div>
                </li>
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-account text-success"></i>
                        <h4>@ViewBag.OrderCount</h4>
                        <span>Sipariş Sayısı</span>
                    </div>
                </li>
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-desktop-mac text-info"></i>
                        <h4>@ViewBag.CountryCount</h4>
                        <span>Ülke Sayısı</span>
                    </div>
                </li>
                <li class="col-lg-2 col-md-4 col-6">
                    <div class="body">
                        <i class="zmdi zmdi-attachment text-warning"></i>
                        <h4>@ViewBag.CityCount</h4>
                        <span>Şehir Sayısı</span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>